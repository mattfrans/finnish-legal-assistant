{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://finnish-legal-ai-production.up.railway.app/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"
    }
  ],
  "env": {
    "VITE_API_URL": "https://finnish-legal-ai-production.up.railway.app",
    "VITE_WS_URL": "wss://finnish-legal-ai-production.up.railway.app"
  },
  "github": {
    "enabled": true,
    "silent": true,
    "productionBranch": "feature/code-improvements"
  }
}
